    </nav>
    
    <div id="user">
        <div id="profile" onclick="menuToggle();">
            <img src="/img/icon.png">
        </div>
        <div id="profilemenu">
            <h3>¡ Hola **** !<br><span>Nutricionista</span></h3>
            <ul>
                <li><i class="fa-regular fa-user"></i><a href="#">Mi perfil</a></li>
